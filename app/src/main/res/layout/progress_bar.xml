<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:alpha="0.8"
    android:background="@drawable/bg_alert_dialog"
    android:minWidth="190dp">

    <ProgressBar
        android:id="@+id/center_process_bar"
        style="@style/ProgressBar.Loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/tv_process_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/center_process_bar"
        android:gravity="center|left"
        android:maxWidth="95dp"
        android:paddingLeft="5dp"
        android:text="@string/loading"
        android:textColor="#f8f8f8"
        android:textSize="@dimen/text_size_info" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_process_prompt"
        android:background="@color/main_secondary"
        android:minHeight="55dp" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/tv_line"
        android:src="@drawable/selector_btn_alert_dialog"  />
</RelativeLayout>